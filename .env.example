# Database configuration
# For SQLite, use: sqlite:///./<filename>.db
# Example for development:
DATABASE_URL=sqlite+aiosqlite:///./aimagain.db

# Important: don't use an async database for tests.
# TEST_DATABASE_URL=sqlite:///./test_aimagain.db # Removed, tests use in-memory DB

# Secret key for JWT (generate a strong, random key for production)
SECRET=your-secret-key-here
DEBUG=False

# Email settings (for password reset, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Deployment
PORT=8000
HOST=0.0.0.0
