{
  "consumer": {
    "name": "registration-form"
  },
  "provider": {
    "name": "aasduth-api"
  },
  "interactions": [
    {
      "description": "a request to register a new user via web form",
      "providerState": "User test.user@example.com does not exist",
      "request": {
        "method": "POST",
        "path": "/auth/register",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "email": "test.user@example.com",
          "password": "securepassword123",
          "username": "testuser"
        },
        "matchingRules": {
          "$.body.email": {
            "match": "type"
          },
          "$.body.password": {
            "match": "type"
          },
          "$.body.username": {
            "match": "type"
          }
        }
      },
      "response": {
        "status": 201,
        "headers": {
        }
      }
    },
    {
      "description": "a request to create a new conversation with valid username",
      "providerState": "user is authenticated and target user exists and is online",
      "request": {
        "method": "POST",
        "path": "/conversations",
        "headers": {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        "body": "invitee_username=testuser2&initial_message=Hello%20there!"
      },
      "response": {
        "status": 303,
        "headers": {
          "Location": "/conversations/mock-slug"
        }
      }
    },
    {
      "description": "a request to view the newly created conversation",
      "providerState": "user is authenticated and target user exists and is online",
      "request": {
        "method": "GET",
        "path": "/conversations/mock-slug"
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "text/html"
        },
        "body": "<html>Conversation page</html>"
      }
    },
    {
      "description": "a request to create a conversation with non-existent username",
      "providerState": "user is authenticated and target user does not exist",
      "request": {
        "method": "POST",
        "path": "/conversations",
        "headers": {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        "body": "invitee_username=nonexistentuser&initial_message=Hello%20there!"
      },
      "response": {
        "status": 404,
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "detail": "User with username 'nonexistentuser' not found."
        }
      }
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "2.0.0"
    }
  }
}